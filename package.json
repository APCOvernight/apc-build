{
  "name": "apc-build",
  "version": "0.4.0",
  "description": "Gulp build scripts for front end APC projects",
  "main": "index.js",
  "scripts": {
    "test": "yarn lint && nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls && nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "lint": "eslint test/*.spec.js gulp-tasks/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APCOvernight/apc-build.git"
  },
  "keywords": [
    "gulp",
    "build",
    "js",
    "frontend"
  ],
  "author": "Ian Egner <ian.egner@apc-overnight.com> (https://twitter.com/ianegner)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/APCOvernight/apc-build/issues"
  },
  "homepage": "https://github.com/APCOvernight/apc-build#readme",
  "engines": {
    "yarn": "^1.0.0"
  },
  "peerDependencies": {
    "apc-style": "^0.4.3",
    "gulp": "^4.0.0"
  },
  "dependencies": {
    "babel-core": "6.26.0",
    "babel-env": "2.4.1",
    "browserify": "15.2.0",
    "css-mqpacker": "6.0.2",
    "gulp-autoprefixer": "4.1.0",
    "gulp-babel": "7.0.1",
    "gulp-eslint": "4.0.2",
    "gulp-if": "2.0.2",
    "gulp-imagemin": "4.1.0",
    "gulp-postcss": "7.0.1",
    "gulp-pug-linter": "0.5.1",
    "gulp-sass": "3.1.0",
    "gulp-size": "3.0.0",
    "gulp-sourcemaps": "2.6.4",
    "gulp-uglify": "3.0.0",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  },
  "devDependencies": {
    "apc-style": "1.0.1",
    "apc-test": "1.0.2",
    "foundation-sites": "6.4.4-rc1",
    "fs-extra": "5.0.0",
    "gulp": "4.0.0"
  },
  "nyc": {
    "include": [
      "gulp-tasks/**/*.js",
      "index.js"
    ],
    "all": true,
    "watermarks": {
      "lines": [
        90,
        99
      ],
      "functions": [
        90,
        99
      ],
      "branches": [
        90,
        99
      ],
      "statements": [
        90,
        99
      ]
    },
    "reporter": [
      "clover",
      "text",
      "text-summary",
      "html",
      "cobertura"
    ],
    "cache": true
  }
}
